@{
    ViewData["Title"] = "Users";
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 mt-3">
        <div>
            <h4>Customers</h4>
            <p class="text-muted">Manage your customers efficiently—add, search, and organize them all from one location.</p>
        </div>
        <button class="btn btn-primary ms-auto" asp-controller="Users" asp-action="Create" data-bs-toggle="modal" data-bs-target="#createUserModal">Add Customer</button>
    </div>
    <div class="input-group mb-3">
