@{
    ViewData["Title"] = "View Tickets";
}
<div class="container my-4">
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card p-4">
                <div class="d-flex align-items-center">
                    <h5 class="mb-4 fw-bold">Ticket Title</h5>
                    <div class="d-flex align-items-center ms-auto gap-3">
                        <span class="badge text-black bg-light">Ticket #22</span>
                        <div class="dropdown">
                            <button class="btn bg-info" id="StatusDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-regular fa-circle"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fa-regular fa-circle"></i> Open</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-clock"></i> In Progress</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-pause"></i> On Hold</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-hourglass-half"></i> Pending</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-regular fa-check-circle"></i> Resolved</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-lock"></i> Closed</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-arrow-rotate-left"></i> Reopened</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-angles-up"></i> Escalated</a></li>
                                <li><a class="dropdown-item text-danger" href="#"><i class="fa-solid fa-times-circle"></i> Rejected</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <button class="btn" id="TicketDetailsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical text-black"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Events</a></li>
                                <li><a class="dropdown-item" href="#">Suspend User</a></li>
                                <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr />
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/images/user.png" alt="Profile" class="profile-img me-2">
                        <h5>Bryan</h5>
                        <a asp-controller="Users" asp-action="Details" class="btn text-decoration-none text-black ms-auto">
                            <i class="fa-solid fa-up-right-from-square"></i>
                        </a>
                    </div>
                    <hr />
                    <div class="text-muted mb-3">
                        <div class="mb-2">
                            <label for="name" class="form-label">
                                <i class="fa-solid fa-user"></i> Name
                            </label>
                            <input type="text" class="form-control" id="name" placeholder="Enter name" />
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">
                                <i class="fa-solid fa-phone"></i> Phone
                            </label>
                            <input type="tel" class="form-control" id="phone" placeholder="Enter phone number" />
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">
                                <i class="fa-solid fa-location-dot"></i> Address
                            </label>
                            <input type="text" class="form-control" id="address" placeholder="Enter address" />
                        </div>
                        <div class="mb-3">
                            <label for="notes" class="form-label">
                                <i class="fa-regular fa-clipboard"></i> Notes
                            </label>
                            <textarea class="form-control" id="notes" rows="3" placeholder="Add user notes"></textarea>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
