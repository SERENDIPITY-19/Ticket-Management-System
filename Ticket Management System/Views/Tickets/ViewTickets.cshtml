@{
    ViewData["Title"] = "View Tickets";
}
<div class="container my-4">
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card p-4">
                <div class="d-flex align-items-center">
                    <h5 class="mb-4 fw-bold">Ticket Title</h5>
                    <div class="d-flex align-items-center ms-auto gap-2">
                        <span class="badge text-black bg-light">Ticket #22</span>
                        <div class="dropdown">
                            <button class="btn bg-info" id="StatusDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-regular fa-circle"></i>
                            </button>
                            <ul class="dropdown-menu" id="statusList">
                                <li class="dropdown-item"><i class="fa-regular fa-circle"></i> Open</li>
                                <li class="dropdown-item"><i class="fa-solid fa-clock"></i> In Progress</li>
                                <li class="dropdown-item"><i class="fa-solid fa-pause"></i> On Hold</></li>
                                <li class="dropdown-item"><i class="fa-solid fa-hourglass-half"></i> Pending</li>
                                <li class="dropdown-item"><i class="fa-regular fa-check-circle"></i> Resolved</li>
                                <li class="dropdown-item"><i class="fa-solid fa-lock"></i> Closed</li>
                                <li class="dropdown-item"><i class="fa-solid fa-arrow-rotate-left"></i> Reopened</li>
                                <li class="dropdown-item"><i class="fa-solid fa-angles-up"></i> Escalated</li>
                                <li class="dropdown-item"><i class="fa-solid fa-times-circle"></i> Rejected</li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <button class="btn" id="TicketDetailsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical text-black"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Events</a></li>
                                <li><a class="dropdown-item" href="#">Suspend User</a></li>
                                <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="d-flex align-items-start gap-2">
                    <div class="text-container flex-grow-1">
                        <p id="collapseText" class="collapse">
                            This is the description and if it is too long, it will hide the overflow and indicate the overflow with an ellipsis and when you click the button just right to this description, it will expand the container and you will be able to see the whole text.
                        </p>
                    </div>
                    <button class="btn expand-btn" data-bs-toggle="collapse" data-bs-target="#collapseText" aria-expanded="false" aria-controls="collapseText">
                        <i class="fa-solid fa-up-right-and-down-left-from-center"></i>
                    </button>
                </div>
                <hr />
                <div class="email-container m-3">
                    <div class="row justify-content-start">
                        <div class="customer-email d-flex col-10">
                            <div class="align-self-end me-2">
                                <img src="~/images/user.png" alt="Customer" />
                            </div>
                            <div class="card customer-email-card p-3 flex-grow-1">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <span class="fw-bold">Ana Olivia</span>
                                        <i class="fa-regular fa-envelope"></i>
                                        <div class="text-muted">To: support@replsolutions.com</div>
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    Thanks for reaching out email with repl we will get back to you soon.<br><br>
                                    Regards
                                </div>
                                <div class="text-muted">•Today at 22:05</div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="support-email d-flex col-10">
                            <div class="card support-email-card mt-4 p-3">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <span class="fw-bold">Roger Smith</span>
                                        <i class="fa-solid fa-reply"></i>
                                        <div class="text-muted">To: anaolivia@gmail.com</div>
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    Thanks for reaching out email with repl we will get back to you soon as possible.<br><br>
                                    If you have anything else you can let us know via email.<br><br>
                                    Regards
                                </div>
                                <div class="text-muted ms-auto">•Today at 22:05</div>
                            </div>
                            <div class="align-self-end ms-2">
                                <img src="~/images/user.png" alt="Support" />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="support-note d-flex col-10">
                            <div class="card support-note-card mt-4 p-3">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <span class="fw-bold">Roger Smith</span>
                                        <i class="fa-regular fa-clipboard"></i>
                                    </div>
                                </div>
                                <hr />
                                <div>
                                    This is the notes where agent support of the company can add any notes...
                                </div>
                                <div class="text-muted ms-auto">•Today at 22:05</div>
                            </div>
                            <div class="align-self-end ms-2">
                                <img src="~/images/user.png" alt="Support" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/images/user.png" alt="Profile" class="profile-img me-2">
                        <h5>Ana</h5>
                        <a asp-controller="Users" asp-action="Details" class="btn text-decoration-none text-black ms-auto">
                            <i class="fa-solid fa-up-right-from-square"></i>
                        </a>
                    </div>
                    <hr />
                    <div class="my-3">
                        <div class="d-flex flex-column gap-2">
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-user me-2"></i>
                                <span class="fw-bold">Name</span>
                                <span class="ms-auto">Ana Olivia</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-envelope me-2"></i>
                                <span class="fw-bold">Email</span>
                                <span class="ms-auto">ana@gmail.com</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-phone me-2"></i>
                                <span class="fw-bold">Phone</span>
                                <span class="ms-auto">+977 - 9812345678</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-location-dot me-2"></i>
                                <span class="fw-bold">Address</span>
                                <span class="ms-auto">Kathmandu</span>
                            </div>
                        </div>

                        <div class="my-3">
                            <label for="notes" class="form-label">
                                <i class="fa-regular fa-clipboard"></i> Notes
                            </label>
                            <textarea class="form-control" id="notes" rows="3" placeholder="Add user notes"></textarea>
                        </div>
                    </div>
                    <hr />

                </div>
            </div>

        </div>
    </div>
</div>
