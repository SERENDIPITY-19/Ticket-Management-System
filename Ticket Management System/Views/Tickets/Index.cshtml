@{
    ViewData["Title"] = "View Tickets";
}
<div class="container my-4">
    <h4 class="my-3"> All Tickets</h4>
    <button class="btn btn-outline-primary d-flex align-items-center gap-2">
        <i class="fa-solid fa-sliders"></i> Filter
    </button>
    <div class="card mt-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr class="card-header">
                        <th scope="col"><input type="checkbox"></th>
                        <th scope="col">Ticket Status</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Requester</th>
                        <th scope="col">Requested</th>
                        <th scope="col">Type</th>
                        <th scope="col">Assignee</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><span class="badge-status badge-new"><i class="fa-solid fa-user-plus me-2"></i>New</span></td>
                        <td>Report not working</td>
                        <td>Bryan</td>
                        <td>3 days ago</td>
                        <td>Ticket Status</td>
                        <td><img src="~/images/user.png" alt="Assignee"></td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><span class="badge-status badge-onhold"><i class="fa-solid fa-pause me-2"></i>On Hold</span></td>
                        <td>Error in line item</td>
                        <td>Bryan</td>
                        <td>3 days ago</td>
                        <td>Ticket Status</td>
                        <td><img src="~/images/user.png" alt="Assignee"></td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><span class="badge-status badge-inprogress"><i class="fa-solid fa-clock me-2"></i>In Progress</span></td>
                        <td>Student details</td>
                        <td>Bryan</td>
                        <td>3 days ago</td>
                        <td>Ticket Status</td>
                        <td><img src="~/images/user.png" alt="Assignee"></td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td><span class="badge-status badge-new"><i class="fa-solid fa-user-plus me-2"></i>New</span></td>
                        <td>Student details</td>
                        <td>Bryan</td>
                        <td>3 days ago</td>
                        <td>Ticket Status</td>
                        <td><img src="~/images/user.png" alt="Assignee"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>